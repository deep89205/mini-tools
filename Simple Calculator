#include<iostream>
using namespace std;

int main(){
    cout<<"Simple Calculator!\n";
    double a , b;
    char c;
    cout<<"Enter two numbers:\n";
    cin>>a>>b;
    cout<<"Enter the operation to be performed(+,-,*,/):\n";
    cin>>c;
      switch(c) {
    case '+':
      cout << a << " + " << b << " = " << a + b;
      break;
    case '-':
      cout << a << " - " << b << " = " << a - b;
      break;
    case '*':
      cout << a << " * " << b << " = " << a * b;
      break;
    case '/':
      cout << a << " / " << b << " = " << a / b;
      break;
    default:
      cout << "Please Choose an operator from above only!!";
      break;
  }    
    return 0;
}
